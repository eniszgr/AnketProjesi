@{
    ViewData["Title"] = "Charts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Anket Sonuçları</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.canvasjs.com/canvasjs.min.js"></script>
</head>
<body>
    <div class="container">
        <h2>Cevap Sayım</h2>
        <br />
        <p>A yüzdesi: @string.Format("{0:F2}", ViewData["percentA"]) %</p>
        <p>B yüzdesi: @string.Format("{0:F2}", ViewData["percentB"])%</p>
        <p>C yüzdesi: @string.Format("{0:F2}", ViewData["percentC"])%</p>
    </div>
    <div id="grafikContainer" style="height: 300px; width: 100%;"></div>
    <script>
        
            // JavaScript değişkenlerine verileri aktarın
            var yuzdeA = parseFloat("@ViewData["percentA"]");
            var yuzdeB = parseFloat("@ViewData["percentB"]");
            var yuzdeC = parseFloat("@ViewData["percentC"]");

            // CanvasJS ile grafik oluşturma
            var chart = new CanvasJS.Chart("grafikContainer", {
                theme: "light2",
                animationEnabled: true,
                title: {
                    text: "Anket Sonuçları",
                    fontSize: 20
                },
                data: [{
                    type: "pie",
                    showInLegend: true,
                    legendText: "{label}",
                    indexLabelFontSize: 12,
                    indexLabel: "{label} - {y}%",
                    dataPoints: [
                        { y: yuzdeA, label: "Cevap A" },
                        { y: yuzdeB, label: "Cevap B" },
                        { y: yuzdeC, label: "Cevap C" }
                    ]
                }]
            });
            chart.render();
        
    </script>
</body>
</html>
